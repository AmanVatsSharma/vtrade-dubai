# VTrade - Environment Variables Configuration

# ===========================================
# APPLICATION URL (IMPORTANT!)
# ===========================================
# Set this to your production domain to fix order placement issues
# Leave unset in production and the app will auto-detect the correct URL
NEXT_PUBLIC_BASE_URL=https://www.vtrade.live

# For local development, use:
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# AUTHENTICATION
# ===========================================
NEXTAUTH_URL=https://www.vtrade.live
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=your-database-url-here

# ===========================================
# SUPABASE
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# VORTEX API (Market Data)
# ===========================================
VORTEX_API_URL=your-vortex-api-url
VORTEX_API_KEY=your-vortex-api-key

# ===========================================
# CORS & SECURITY
# ===========================================
ALLOWED_ORIGINS=https://www.vtrade.live

# ===========================================
# MARKETING HOMEPAGE (BANNER + CHAT WIDGET)
# ===========================================
# These are used by the public marketing homepage (/)
SITE_BANNER_ENABLED=true
# SITE_BANNER_TITLE="ðŸš§ Scheduled Server Upgrade in Progress"
# SITE_BANNER_MESSAGE="To provide you with enhanced performance..."

CHAT_WIDGET_ENABLED=true
# CHAT_WIDGET_TITLE="Hi Hello ðŸ‘‹, welcome to VTrade"
# CHAT_WIDGET_MESSAGE="Can we help you?"
# CHAT_WIDGET_CTA_LABEL="Open Chat"
CHAT_WIDGET_CTA_HREF=/contact

# ===========================================
# MAINTENANCE MODE (redirects to /maintenance)
# ===========================================
# NOTE: This is separate from the marketing banner above.
MAINTENANCE_MODE=false
# MAINTENANCE_MESSAGE="We're performing scheduled maintenance to improve your experience. We'll be back shortly!"
# MAINTENANCE_END_TIME="2026-02-11T18:00:00Z"
MAINTENANCE_ALLOW_ADMIN_BYPASS=true

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. In AWS Lambda or non-Vercel deployments, ensure NEXT_PUBLIC_BASE_URL is set
# 2. In Vercel deployments, VERCEL_URL is automatically available
# 3. If both are unset, the app will use https://www.marketpulse360.live as fallback

# ===========================================
# WEBSOCKET MARKET DATA
# ===========================================
LIVE_MARKET_WS_URL=ws://marketdata.vedpragya.com:3000/market-data
LIVE_MARKET_WS_API_KEY=your-api-key-here
NEXT_PUBLIC_ENABLE_WS_MARKET_DATA=true

