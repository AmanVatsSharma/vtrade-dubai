// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//////////////////////////
// Enums
//////////////////////////
enum Role {
  USER
  ADMIN
  MODERATOR
  SUPER_ADMIN
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AuthEventType {
  REGISTRATION_ATTEMPT
  REGISTRATION_SUCCESS
  REGISTRATION_FAILED
  LOGIN_ATTEMPT
  LOGIN_SUCCESS
  LOGIN_FAILED
  OTP_SENT
  OTP_VERIFIED
  OTP_FAILED
  OTP_RESEND
  MPIN_SETUP_ATTEMPT
  MPIN_SETUP_SUCCESS
  MPIN_SETUP_FAILED
  MPIN_VERIFY_ATTEMPT
  MPIN_VERIFY_SUCCESS
  MPIN_VERIFY_FAILED
  MPIN_RESET_ATTEMPT
  MPIN_RESET_SUCCESS
  MPIN_RESET_FAILED
  SESSION_CREATED
  SESSION_EXPIRED
  SESSION_INVALIDATED
  PHONE_VERIFIED
  KYC_SUBMITTED
  KYC_APPROVED
  KYC_REJECTED
  SECURITY_VIOLATION
  RATE_LIMIT_EXCEEDED
  ACCOUNT_LOCKED
  ACCOUNT_UNLOCKED
}

enum AuthEventSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum OrderType {
  MARKET
  LIMIT
}

enum OrderSide {
  BUY
  SELL
}

enum OrderStatus {
  PENDING
  EXECUTED
  CANCELLED
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum OptionType {
  CE
  PE
  XX // Temporary: will be removed after data cleanup
}

enum LogLevel {
  INFO
  WARN
  ERROR
  DEBUG
}

enum LogCategory {
  ORDER
  POSITION
  TRANSACTION
  FUNDS
  AUTH
  SYSTEM
  API
}

enum OtpPurpose {
  LOGIN_VERIFICATION
  MPIN_SETUP
  MPIN_RESET
  PHONE_VERIFICATION
  TRANSACTION_AUTH
}

//////////////////////////
// NextAuth Models
//////////////////////////
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String   @id @default(cuid())
  email      String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//////////////////////////
// Core Models
//////////////////////////
model User {
  id                 String               @id @default(uuid())
  name               String?
  email              String?              @unique
  emailVerified      DateTime?            @map("email_verified")
  password           String?
  image              String?
  phone              String?              @unique
  phoneVerified      DateTime?            @map("phone_verified")
  mPin               String? // Encrypted mPin for trading
  bio                String?
  role               Role                 @default(USER)
  isActive           Boolean              @default(true)
  kyc                KYC?
  tradingAccount     TradingAccount?
  accounts           Account[] // NextAuth relation
  sessions           Session[] // NextAuth relation
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @default(now()) @updatedAt
  clientId           String?              @unique @map("client_id")
  PasswordResetToken PasswordResetToken[]
  Watchlist          Watchlist[]
  OtpToken           OtpToken[]
  SessionAuth        SessionAuth[]
  AuthEvents         AuthEvent[]

  // Console-specific relations
  bankAccounts BankAccount[]
  deposits     Deposit[]
  withdrawals  Withdrawal[]
  userProfile  UserProfile?

  // Relationship Manager (RM) self-relation
  managedById   String?
  managedBy     User?                @relation("UserRM", fields: [managedById], references: [id], onDelete: SetNull)
  managedUsers  User[]               @relation("UserRM")

  // Referrals created by this user (typically admins)
  referralLinks ReferralLink[]

  // Owned scoped settings (per-admin/RM)
  ownedSettings SystemSettings[] @relation("UserOwnedSettings")

  @@map("users")
  @@index([managedById])
}

model KYC {
  id            String    @id @default(uuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  aadhaarNumber String
  panNumber     String
  bankProofUrl  String
  status        KycStatus @default(PENDING)
  submittedAt   DateTime  @default(now())
  approvedAt    DateTime?
  updatedAt     DateTime  @updatedAt

  @@map("kyc")
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime
  userId  String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([email, token])
}

model Stock {
  id            String   @id @default(cuid())
  instrumentId  String   @unique
  symbol        String
  exchange      String
  ticker        String
  name          String
  segment       String // NSE, NFO
  ltp           Float    @default(0)
  open          Float    @default(0)
  high          Float    @default(0)
  low           Float    @default(0)
  close         Float    @default(0)
  volume        Int      @default(0)
  change        Float    @default(0)
  changePercent Float    @default(0)
  sector        String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt()

  // F&O specific fields
  strikePrice    Decimal?        @db.Decimal(10, 2) // Only for options
  optionType     OptionType? // CE/PE, only for options
  expiry         DateTime? // Only for F&O
  lot_size       Float?
  
  // Instrument token from market data API
  token          Int?            @unique
  
  watchlistItems WatchlistItem[]
  orders         Order[]
  positions      Position[]
  
  @@index([token])
}

model Watchlist {
  id          String   @id @default(uuid())
  userId      String
  name        String   @default("My Watchlist")
  description String?
  color       String?  @default("#3B82F6") // Hex color for watchlist theme
  isDefault   Boolean  @default(false) // Mark default watchlist
  isPrivate   Boolean  @default(false) // Private vs public watchlist
  sortOrder   Int      @default(0) // Custom sort order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  user  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  items WatchlistItem[]

  @@unique([userId, name])
  @@index([userId, sortOrder])
}

model WatchlistItem {
  id          String   @id @default(cuid())
  watchlistId String
  stockId     String
  notes       String? // User notes for this stock
  alertPrice  Decimal? @db.Decimal(10, 2) // Price alert threshold
  alertType   String?  @default("ABOVE") // ABOVE, BELOW, BOTH
  sortOrder   Int      @default(0) // Custom sort order within watchlist
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  // Instrument token from market data API
  token          Int?            @unique

  watchlist Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)
  stock     Stock     @relation(fields: [stockId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, stockId])
  @@index([watchlistId, sortOrder])
}

model TradingAccount {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance         Int      @default(0)
  availableMargin Int      @default(0)
  usedMargin      Int      @default(0)
  clientId        String?  @unique @map("client_id")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt

  orders      Order[]
  positions   Position[]
  trades      Transaction[]
  deposits    Deposit[]
  withdrawals Withdrawal[]

  @@map("trading_accounts")
}

model Order {
  id               String      @id @default(uuid())
  tradingAccountId String
  symbol           String
  quantity         Int
  orderType        OrderType
  orderSide        OrderSide
  price            Decimal?    @db.Decimal(10, 2)
  filledQuantity   Int         @default(0)
  averagePrice     Decimal?    @db.Decimal(10, 2)
  productType      String      @default("MIS")
  status           OrderStatus @default(PENDING)
  createdAt        DateTime    @default(now())
  executedAt       DateTime?

  tradingAccount TradingAccount @relation(fields: [tradingAccountId], references: [id], onDelete: Cascade)
  Stock          Stock?         @relation(fields: [stockId], references: [id])
  stockId        String?
  Position       Position?      @relation(fields: [positionId], references: [id])
  positionId     String?
  // Reverse relation to transactions linked to this order
  transactions   Transaction[]

  @@map("orders")
}

model Transaction {
  id               String          @id @default(uuid())
  tradingAccountId String
  amount           Decimal         @db.Decimal(18, 2)
  type             TransactionType
  description      String?
  createdAt        DateTime        @default(now())

  tradingAccount TradingAccount @relation(fields: [tradingAccountId], references: [id], onDelete: Cascade)
  // Link transactions to specific orders/positions when applicable
  orderId       String?
  order         Order?         @relation(fields: [orderId], references: [id], onDelete: SetNull)
  positionId    String?
  position      Position?      @relation(fields: [positionId], references: [id], onDelete: SetNull)

  @@map("transactions")
  @@index([orderId])
  @@index([positionId])
}

model Position {
  id               String   @id @default(uuid())
  tradingAccountId String
  symbol           String
  quantity         Int
  averagePrice     Decimal  @db.Decimal(10, 2)
  unrealizedPnL    Decimal  @default(0) @db.Decimal(18, 2)
  dayPnL           Decimal  @default(0) @db.Decimal(18, 2)
  stopLoss         Decimal? @db.Decimal(10, 2)
  target           Decimal? @db.Decimal(10, 2)
  createdAt        DateTime @default(now())

  tradingAccount TradingAccount @relation(fields: [tradingAccountId], references: [id], onDelete: Cascade)
  Stock          Stock?         @relation(fields: [stockId], references: [id])
  stockId        String?
  orders         Order[]
  // Reverse relation to transactions linked to this position
  transactions   Transaction[]

  @@unique([tradingAccountId, symbol])
  @@map("positions")
}

model VortexSession {
  id          Int      @id @default(autoincrement())
  userId      Int // agar aapke paas users table hai
  accessToken String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model OtpToken {
  id        String     @id @default(uuid())
  userId    String
  phone     String
  otp       String
  purpose   OtpPurpose
  attempts  Int        @default(0)
  isUsed    Boolean    @default(false)
  expiresAt DateTime
  createdAt DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([phone])
  @@index([purpose])
  @@index([expiresAt])
  @@map("otp_tokens")
}

model SessionAuth {
  id              String   @id @default(uuid())
  userId          String
  sessionToken    String   @unique
  isAuthenticated Boolean  @default(false)
  isMpinVerified  Boolean  @default(false)
  deviceId        String?
  ipAddress       String?
  userAgent       String?
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  lastActivity    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionToken])
  @@index([expiresAt])
  @@map("session_auth")
}

model AuthEvent {
  id        String            @id @default(uuid())
  userId    String?
  eventType AuthEventType
  severity  AuthEventSeverity
  message   String
  metadata  String? // JSON string
  timestamp DateTime
  createdAt DateTime          @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([eventType])
  @@index([severity])
  @@index([timestamp])
  @@map("auth_events")
}

model RiskConfig {
  id            String   @id @default(uuid())
  segment       String // NSE, NFO, MCX, etc.
  productType   String   @map("product_type") // MIS, DELIVERY, etc.
  leverage      Decimal  @default(1) @db.Decimal(10, 2)
  brokerageFlat Decimal? @map("brokerage_flat") @db.Decimal(10, 2)
  brokerageRate Decimal? @map("brokerage_rate") @db.Decimal(10, 6)
  brokerageCap  Decimal? @map("brokerage_cap") @db.Decimal(10, 2)
  marginRate    Decimal? @map("margin_rate") @db.Decimal(10, 6) // Margin percentage required
  maxOrderValue Decimal? @map("max_order_value") @db.Decimal(18, 2)
  maxPositions  Int?     @map("max_positions")
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  @@unique([segment, productType])
  @@index([segment])
  @@index([productType])
  @@index([active])
  @@map("risk_config")
}

model TradingLog {
  id               String      @id @default(uuid())
  clientId         String      @map("client_id")
  userId           String?
  tradingAccountId String?     @map("trading_account_id")
  level            LogLevel    @default(INFO)
  category         LogCategory
  action           String // e.g., "ORDER_PLACED", "POSITION_CREATED", "FUNDS_DEDUCTED"
  message          String
  details          Json? // Additional structured data
  metadata         Json? // Request headers, IP, user agent, etc.
  error            String? // Error message if applicable
  stackTrace       String? // Stack trace for errors
  createdAt        DateTime    @default(now())

  @@index([clientId])
  @@index([category])
  @@index([level])
  @@index([createdAt])
  @@map("trading_logs")
}

// Console-specific models for real user data
model BankAccount {
  id                String   @id @default(uuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankName          String
  accountNumber     String
  ifscCode          String
  accountHolderName String
  accountType       String   @default("savings") // savings, current
  isDefault         Boolean  @default(false)
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  deposits    Deposit[]
  withdrawals Withdrawal[]

  @@unique([userId, accountNumber])
  @@index([userId])
  @@map("bank_accounts")
}

model Deposit {
  id               String         @id @default(uuid())
  userId           String
  user             User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tradingAccountId String
  tradingAccount   TradingAccount @relation(fields: [tradingAccountId], references: [id], onDelete: Cascade)
  bankAccountId    String?
  bankAccount      BankAccount?   @relation(fields: [bankAccountId], references: [id], onDelete: SetNull)
  amount           Decimal        @db.Decimal(18, 2)
  method           String // upi, bank_transfer, neft, rtgs, cash
  status           DepositStatus  @default(PENDING)
  utr              String? // UTR number for tracking
  reference        String? // Reference number
  remarks          String?
  // Optional proof of payment image storage
  screenshotUrl    String?
  screenshotKey    String?
  processedAt      DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([userId])
  @@index([tradingAccountId])
  @@index([status])
  @@index([createdAt])
  @@map("deposits")
}

model Withdrawal {
  id               String           @id @default(uuid())
  userId           String
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  tradingAccountId String
  tradingAccount   TradingAccount   @relation(fields: [tradingAccountId], references: [id], onDelete: Cascade)
  bankAccountId    String
  bankAccount      BankAccount      @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  amount           Decimal          @db.Decimal(18, 2)
  status           WithdrawalStatus @default(PENDING)
  reference        String? // Reference number
  remarks          String?
  charges          Decimal          @default(0) @db.Decimal(18, 2)
  processedAt      DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@index([userId])
  @@index([tradingAccountId])
  @@index([status])
  @@index([createdAt])
  @@map("withdrawals")
}

model UserProfile {
  id                   String    @id @default(uuid())
  userId               String    @unique
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName            String?
  lastName             String?
  dateOfBirth          DateTime?
  gender               String?
  address              String?
  city                 String?
  state                String?
  pincode              String?
  panNumber            String?
  aadhaarNumber        String?
  occupation           String?
  annualIncome         Decimal?  @db.Decimal(18, 2)
  riskProfile          String?   @default("MODERATE") // CONSERVATIVE, MODERATE, AGGRESSIVE
  investmentExperience String? // BEGINNER, INTERMEDIATE, ADVANCED
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@map("user_profiles")
}

// System Settings - Platform-wide configuration
model SystemSettings {
  id          String   @id @default(uuid())
  ownerId     String?
  owner       User?    @relation("UserOwnedSettings", fields: [ownerId], references: [id], onDelete: SetNull)
  key         String   // e.g., "payment_qr_code", "payment_upi_id", "platform_logo"
  value       String   // URL or text value
  description String?  // Description of the setting
  category    String   @default("GENERAL") // PAYMENT, BRANDING, NOTIFICATION, etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([ownerId, key])
  @@index([key])
  @@index([category])
  @@map("system_settings")
}
// Referral links for RM-led onboarding
model ReferralLink {
  id           String   @id @default(cuid())
  code         String   @unique
  createdById  String
  createdBy    User     @relation(fields: [createdById], references: [id], onDelete: Cascade)
  expiresAt    DateTime?
  maxUses      Int?
  usedCount    Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([createdById])
  @@map("referral_links")
}


// Additional enums for console functionality
enum DepositStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}
